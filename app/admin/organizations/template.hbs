{{organization-adder}}

{{#md-collapsible}}
  {{#each model as |organization|}}
    {{#collapsible-item title=organization.name}}
      <div class="row">
        <div class="col m6">
          <div class="row">
            <div class="col s6">
              {{user-adder organization=organization}}
            </div>
            <div class="col s6">
              {{md-btn icon='chart-pie'}}
            </div>
          </div>
        </div>
        <div class="col m6">
          {{#each organization.users as |user|}}
            <p>{{user.email}}</p>
          {{else}}
            No users in this organization yet.
          {{/each}}
        </div>
      </div>
    {{/collapsible-item}}
  {{/each}}
{{/md-collapsible}}
{{organization-adder}}

{{#md-collapsible}}
  {{#each model as |organization|}}
    {{#collapsible-item title=organization.name badge=organization.devices.length}}
      <div class="row">
        <div class="col m6">
          <div class="row">
            <div class="col s6">
              {{user-adder organization=organization}}
            </div>
            <div class="col s6">
              {{#link-to 'dashboard' organization}}
                {{md-btn icon='chart-pie'}}
              {{/link-to}}
            </div>
          </div>
        </div>
        <div class="col m6">
          {{#each organization.users as |user|}}
            {{#if user.displayName}}
              <div>
                {{user.displayName}}: {{user.email}}
              </div>
            {{else}}
              <div class="grey-text">
                {{user.email}} (not logged in yet)
              </div>
            {{/if}}
          {{else}}
            No users in this organization yet.
          {{/each}}
        </div>
      </div>
    {{/collapsible-item}}
  {{/each}}
{{/md-collapsible}}